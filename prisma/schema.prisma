// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity"]
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

model Example {
    id   String @id @default(cuid())
    text String
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    //app
    bots          Bot[]
    intId         Int       @unique @default(autoincrement())
}

// application

model Bot {
    id        Int             @id @default(autoincrement())
    createdAt DateTime        @default(now())
    name      String
    bio       String
    user      User            @relation(fields: [userId], references: [id])
    userId    String
    replays   ReplaysOnBots[]
    botStats  BotStats?
}

model Replay {
    id           Int             @id @default(autoincrement())
    createdAt    DateTime        @default(now())
    replayData   ReplayData?
    bots         ReplaysOnBots[]
    winningBotId Int?
    gameLength   Int?
}

//relation tables https://www.prisma.io/docs/concepts/components/prisma-schema/relations/many-to-many-relations#relation-tables
model ReplaysOnBots {
    replay   Replay @relation(fields: [replayId], references: [id])
    replayId Int
    bot      Bot    @relation(fields: [botId], references: [id])
    botId    Int

    @@id([replayId, botId])
}

model BotStats {
    id          Int @id @default(autoincrement())
    bot         Bot @relation(fields: [botId], references: [id])
    botId       Int @unique
    wins        Int
    losses      Int
    draws       Int
    gamesPlayed Int
}

// https://www.prisma.io/docs/concepts/components/prisma-schema/relations/one-to-one-relations
model ReplayData {
    id       Int    @id @default(autoincrement())
    data     Json
    replay   Replay @relation(fields: [replayId], references: [id])
    replayId Int    @unique
}
